<div class="item-link-tree-tab">
  <ol class="items-list item-link-tree-items-list">
    <li class="items-header flexrow">
      <h3 class="item-name flexrow">
        {{localize 'Tree'}}
      </h3>
      <!--
      <div class="item-detail">
        {{localize 'item-link-tree.prefix.label'}}
      </div>

      <div class="item-detail">
        {{localize 'item-link-tree.suffix.label'}}
      </div>
      -->
      <div class="item-detail">
        {{localize 'item-link-tree.shortDescriptionLink.label'}}
      </div>

      <div class="item-detail">
        {{localize 'item-link-tree.customLink.label'}}
      </div>

      <div class="item-controls"></div>

    </li>

    <ol class="item-list">
      {{#each itemLeafs as |leaf|}}
      <li class="item context-enabled flexrow" data-item-id="{{leaf.id}}">
        <div class="item-name flexrow rollable">
          <div class="item-image" style="background-image: url({{leaf.img}})"></div>
          <h4>{{leaf.name}}</h4>
        </div>

        <div class="item-detail item-link-tree-item-detail">
          <span title="{{leaf.shortDescriptionLink}}">{{leaf.shortDescriptionLink}}</span>
        </div>

        <div class="item-detail item-link-tree-item-detail">
          <span title="{{leaf.customLink}}">{{leaf.customLink}}</span>
        </div>

        <div class="item-controls flexrow context-menu item-link-tree-item-controls">
          {{#if @root/playerCanOnlyView}}

          {{#if @root/isOwner}}
          <a class="item-control configure-overrides"
            data-tooltip="{{#unless @root/isOwned}}item-link-tree.ConfigureOverrides{{else}}item-link-tree.Configure{{/unless}}">
            <i class="fas fa-edit"></i>
          </a>

          <a class="item-control item-create-custom-link" data-tooltip="item-link-tree.CreateCustomLink">
            <i class="fa-solid fa-share-from-square"></i>
          </a>

          {{#if @root/isOwned}}
          <a class="item-control item-destroy" data-tooltip="item-link-tree.DeleteLeaf">
            <i class="fas fa-trash"></i>
          </a>
          {{else}}
          <a class="item-control item-delete" data-tooltip="item-link-tree.RemoveLink">
            <i class="fas {{#if @root/isOwned}}fa-link-slash{{else}}fa-trash{{/if}}"></i>
          </a>
          {{/if}}

          {{/if}}

          {{/if}}
        </div>
      </li>
      {{/each}}
    </ol>
  </ol>

</div>
